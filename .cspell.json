{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en",
  "useGitignore": true,
  "ignorePaths": [
    "**/*.yml",
    "mix.exs",
    "mix.lock",
    "resources/ZWave_custom_cmd_classes.xml"
  ],
  "dictionaryDefinitions": [
    {
      "name": "project-words",
      "path": "./.cspell-dictionary.txt",
      "description": "Custom words for the project",
      "addWords": true
    }
  ],
  "dictionaries": [
    "project-words",
  ]
}
